<Window
    x:Class="ReunionCppDesktopSampleApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReunionCppDesktopSampleApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center">Clicking the button below will call an API on an activatable class included in a Project Reunion.</TextBlock>
        <Button x:Name="callAPIButton" Click="CallAPIButton_Click" HorizontalAlignment="Center">Call API</Button>
        <TextBlock x:Name="resultText" HorizontalAlignment="Center"></TextBlock>
    </StackPanel>
</Window>
