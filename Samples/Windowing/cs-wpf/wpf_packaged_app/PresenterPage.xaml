<Page x:Class="wpf_packaged_app.PresenterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpf_packaged_app"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PresenterPage"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center">Presenters</TextBlock>
        <StackPanel Grid.Row="1" Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="5,5,5,5" x:Name="CompactoverlaytBtn" Click="SwitchPresenter">Enter CompactOverlay</Button>
            <Button Margin="5,5,5,5" x:Name="FullscreenBtn" Click="SwitchPresenter">Enter FullScreen</Button>
            <Button Margin="5,5,5,5" x:Name="OverlappedBtn" Click="SwitchPresenter">Revert to default (Overlapped)</Button>
        </StackPanel>    
    </Grid>
</Page>
