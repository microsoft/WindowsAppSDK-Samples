<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Notes.Controls.AttachmentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Notes.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:models="using:Notes.Models"
    mc:Ignorable="d">

    <Grid
        x:Name="Root"
        Background="{ThemeResource SmokeFillColorDefaultBrush}" Padding="20, 60" Tapped="BackgroundTapped">
        <Grid
            x:Name="ImageGrid"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            MaxWidth="1200"
            BorderBrush="{ThemeResource ControlElevationBorderBrush}"
            BorderThickness="1"
            Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
            CornerRadius="8">

            <ScrollViewer
                x:Name="rootScrollViewer"
                ZoomMode="Enabled"
                MaxZoomFactor="1"
                MinZoomFactor="0.5"
                HorizontalScrollMode="Auto"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollMode="Auto"
                VerticalScrollBarVisibility="Auto">
                <Viewbox
                    Stretch="Uniform"
                    StretchDirection="Both">
                    <Grid>
                        <Image x:Name="AttachmentImage" />
                        <Rectangle x:Name="AttachmentImageTextRect" 
                                   Visibility="Collapsed" />
                    </Grid>
                </Viewbox>
            </ScrollViewer>

            <Button
                Click="CloseButton_Click"
                Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                Style="{ThemeResource CommandBarFlyoutEllipsisButtonStyle}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                <SymbolIcon Symbol="Clear" />
            </Button>
        </Grid>
    </Grid>
</UserControl>