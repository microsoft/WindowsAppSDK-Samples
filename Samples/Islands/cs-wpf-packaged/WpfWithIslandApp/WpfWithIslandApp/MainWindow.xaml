<Window x:Class="WpfWithIslandApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWithIslandApp"
        mc:Ignorable="d"
        Title="WPF + WinAppSDK Islands App" Height="450" Width="800">
    <StackPanel x:Name="_rootPanel">
        <Button Margin="20" FontSize="18" Click="ShowAppWindowClick">Show WinAppSDK AppWindow</Button>
        <Button Margin="20" FontSize="18" Click="CreateIslandClick">Create Island</Button>
        
    </StackPanel>
</Window>
