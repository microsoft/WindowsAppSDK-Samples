<UserControl
    x:Class="MaterialCreator.VectorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MaterialCreator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="XColumn"/>
            <ColumnDefinition x:Name="YColumn"/>
            <ColumnDefinition x:Name="ZColumn"/>
            <ColumnDefinition x:Name="WColumn"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="x" Grid.Column="0" Grid.Row="0" TextChanged="Vector_TextChanged" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
        <TextBox x:Name="y" Grid.Column="1" Grid.Row="0" TextChanged="Vector_TextChanged" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
        <TextBox x:Name="z" Grid.Column="2" Grid.Row="0" TextChanged="Vector_TextChanged" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>
        <TextBox x:Name="w" Grid.Column="3" Grid.Row="0" TextChanged="Vector_TextChanged" Margin="0,0,4,0" HorizontalAlignment="Stretch"/>

    </Grid>

</UserControl>
