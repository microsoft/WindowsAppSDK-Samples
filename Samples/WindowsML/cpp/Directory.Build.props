<Project>
  <PropertyGroup>
    <!-- Central NuGet package versions for C++ WindowsML samples -->
    <WindowsAppSDKVersion>1.8.250916003</WindowsAppSDKVersion>
    <WindowsAppSDKWinUIVersion>1.8.250906003</WindowsAppSDKWinUIVersion>
    <WindowsAppSDKBaseVersion>1.8.250831001</WindowsAppSDKBaseVersion>
    <WindowsAppSDKFoundationVersion>1.8.250906002</WindowsAppSDKFoundationVersion>
    <WindowsAppSDKInteractiveExperiencesVersion>1.8.250906004</WindowsAppSDKInteractiveExperiencesVersion>
    <WindowsAppSDKDWriteVersion>1.8.25090401</WindowsAppSDKDWriteVersion>
    <WindowsAppSDKWidgetsVersion>1.8.250904007</WindowsAppSDKWidgetsVersion>
    <WindowsAppSDKAIVersion>1.8.38</WindowsAppSDKAIVersion>
    <WindowsAppSDKMLVersion>1.8.2091</WindowsAppSDKMLVersion>
    <WindowsAppSDKRuntimeVersion>1.8.250916003</WindowsAppSDKRuntimeVersion>
    <CppWinRTVersion>2.0.240405.15</CppWinRTVersion>
    <WindowsSDKBuildToolsVersion>10.0.26100.4654</WindowsSDKBuildToolsVersion>
    <WebView2Version>1.0.3179.45</WebView2Version>
  </PropertyGroup>

  <PropertyGroup>
    <!-- C++ specific settings only -->
    <WindowsTargetPlatformVersion>10.0.26100.0</WindowsTargetPlatformVersion>
    <Platforms>x64;ARM64</Platforms>
    
    <!-- Disable central package management for C++ projects -->
    <ManagePackageVersionsCentrally>false</ManagePackageVersionsCentrally>
    
    <!-- Namespace output directories to prevent conflicts -->
    <OutDir>$(SolutionDir)$(Platform)\$(Configuration)\$(MSBuildProjectName)\bin\</OutDir>
    <IntDir>$(SolutionDir)$(Platform)\$(Configuration)\$(MSBuildProjectName)\obj\</IntDir>
  </PropertyGroup>

  <ItemDefinitionGroup>
    <ClCompile>
      <WarningLevel>Level3</WarningLevel>
      <SDLCheck>true</SDLCheck>
      <ConformanceMode>true</ConformanceMode>
    </ClCompile>
    <Link>
      <GenerateDebugInformation>true</GenerateDebugInformation>
    </Link>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Debug'">
    <ClCompile>
      <PreprocessorDefinitions>_DEBUG;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Configuration)'=='Release'">
    <ClCompile>
      <FunctionLevelLinking>true</FunctionLevelLinking>
      <IntrinsicFunctions>true</IntrinsicFunctions>
      <PreprocessorDefinitions>NDEBUG;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
    <Link>
      <EnableCOMDATFolding>true</EnableCOMDATFolding>
      <OptimizeReferences>true</OptimizeReferences>
    </Link>
  </ItemDefinitionGroup>

  <ItemDefinitionGroup Condition="'$(Platform)'=='Win32'">
    <ClCompile>
      <PreprocessorDefinitions>WIN32;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>
</Project>
