<Window
    x:Class="SampleApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SampleApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5">
        <TextBlock x:Name="scenario"></TextBlock>
        <Button x:Name="getStatusScenarioButton" Click="getStatusScenarioButton_Click" Margin="3">Scenario 1: DeploymentManager.GetStatus()</Button>
        <Button x:Name="initializeScenarioButton" Click="initializeScenarioButton_Click" Margin="3,3,7,3">Scenario 2: DeploymentManager.Initialize()</Button>
        <TextBlock x:Name="resultStatus" Margin="3"></TextBlock>
        <TextBlock x:Name="resultExtendedError" Margin="3"></TextBlock>
        <TextBlock x:Name="resultImplication" Margin="3"></TextBlock>
    </StackPanel>
</Window>
